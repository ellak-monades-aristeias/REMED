<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:weightSum="1"
    android:gravity="bottom|end"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose your action:"
        android:id="@+id/tv3_1"
        android:layout_gravity="center_horizontal"
        android:textColor="#2c51fd"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove Med"
        android:id="@+id/b3_4"
        android:onClick="onButton3_4Click"
        android:visibility="visible"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_med"
        android:id="@+id/b3_3"
        android:onClick="onButton3_3Click"
        android:visibility="visible"
        android:layout_above="@+id/b3_2"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
         />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Med"
        android:id="@+id/b3_1"
        android:visibility="visible"
        android:onClick="onButton3_1Click"
        android:layout_above="@+id/b3_2"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        style="?android:attr/buttonStyleSmall" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View My Meds"
        android:id="@+id/b3_2"
        android:visibility="visible"
        android:onClick="onButton3_2Click"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        style="?android:attr/buttonStyleSmall" />

</LinearLayout>
